<%= form_for @q_text do |f| %>
  <% if @q_text.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@q_text.errors.count, "error") %> prohibited this q_text from being saved:</h2>

      <ul>
      <% @q_text.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %><br>
    <%= f.number_field :number %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :check %><br>
    <%= f.check_box :check %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
