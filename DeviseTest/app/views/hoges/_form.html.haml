= form_for @hoge do |f|
  - if @hoge.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hoge.errors.count, "error")} prohibited this hoge from being saved:"
      %ul
        - @hoge.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :age
    = f.number_field :age
  .actions
    = f.submit 'Save'
